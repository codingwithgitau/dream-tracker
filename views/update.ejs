<%- include('partials/header', { title: 'My Dreams Page' }) %>
<body>
  <div class="container mt-5">
     <h1 class="text-center mb-4">Edit Dream</h1>

    
  <form action="/dreams/<%= dream.id %>?_method=PATCH" method="POST" class="card p-4 shadow-sm">
   <div class="mb-3">
    <label for="dreamText" class="form-label">Dream:</label>
    <input type="text" class="form-control"  id="dreamText"  name="text" value="<%= dream.text %>" required>
    </div>
    <div class="d-flex justify-content-between">
    <button type="submit" class="btn btn-success">Update Dream</button>
    <a href="/" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
  </div>
<%- include('partials/footer') %>